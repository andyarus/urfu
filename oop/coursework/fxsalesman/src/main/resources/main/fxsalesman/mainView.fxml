<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="CENTER" spacing="20.0" xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/17" fx:controller="main.fxsalesman.MainController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>

    <Label fx:id="titleLabel" text="Выберите источник данных" />
    <Button onAction="#onOpenFileButtonClick" text="Файл" />
   <Button mnemonicParsing="false" onAction="#onRandomButtonClick" text="Рандом" />
   <HBox>
      <children>
         <Label prefHeight="25.0" text="Лог" />
         <Region HBox.hgrow="ALWAYS" />
         <Button mnemonicParsing="false" onAction="#onClearLogClick" text="Очистить" />
      </children>
   </HBox>
   <TextArea fx:id="textArea" prefHeight="333.0" prefWidth="600.0" />
</VBox>
