CREATE TABLE public.administrators
(
    id serial,
    username character varying(50)[] NOT NULL,
    password character varying(50)[] NOT NULL,
    name character varying(255)[],
    email character varying(255)[],
    avatar_url character varying(2083)[],
    created_on timestamp with time zone NOT NULL,
    last_login timestamp with time zone,
    PRIMARY KEY (id),
    CONSTRAINT administrators UNIQUE (username)
);

ALTER TABLE IF EXISTS public.administrators
    OWNER to admin;










CREATE TABLE roles(
   role_id serial PRIMARY KEY,
   role_name VARCHAR (255) UNIQUE NOT NULL
);

CREATE TABLE account_roles (
  user_id INT NOT NULL,
  role_id INT NOT NULL,
  grant_date TIMESTAMP,
  PRIMARY KEY (user_id, role_id),
  FOREIGN KEY (role_id)
      REFERENCES roles (role_id),
  FOREIGN KEY (user_id)
      REFERENCES accounts (user_id)
);






















CREATE TABLE IF NOT EXISTS users (
	id serial PRIMARY KEY,
    is_admin BOOLEAN NOT NULL,
	username VARCHAR (50) UNIQUE NOT NULL,
	password VARCHAR (50) NOT NULL,
    name VARCHAR (255),
    email VARCHAR (255),
    avatar_url VARCHAR (2083),
	created_on TIMESTAMP NOT NULL DEFAULT NOW(),
    last_login TIMESTAMP
);

CREATE TABLE IF NOT EXISTS categories (
	id serial PRIMARY KEY,
    parent_category_id INT,
	name VARCHAR (255) UNIQUE NOT NULL,
    description TEXT,
    icon_url VARCHAR (2083),
    image_url VARCHAR (2083),
	created_on TIMESTAMP NOT NULL DEFAULT NOW()
);

CREATE TABLE IF NOT EXISTS products (
	id serial,
    category_id INT NOT NULL,
	name VARCHAR (255) NOT NULL,
    description TEXT NOT NULL,
    image_url VARCHAR (2083) NOT NULL,
    price BIGINT NOT NULL,
	created_on TIMESTAMP NOT NULL DEFAULT NOW(),
    PRIMARY KEY (id, category_id),
    FOREIGN KEY (category_id)
        REFERENCES categories (id)
);



CREATE TABLE IF NOT EXISTS carts (
	id serial,
    user_id INT NOT NULL,
    products INT[] NOT NULL,
	created_on TIMESTAMP NOT NULL DEFAULT NOW(),
    PRIMARY KEY (id, user_id),
    FOREIGN KEY (user_id)
        REFERENCES users (id)
);

CREATE TABLE IF NOT EXISTS orders (
	id serial,
    user_id INT NOT NULL,
    products INT[] NOT NULL,
    country VARCHAR (255) NOT NULL,
    city VARCHAR (255) NOT NULL,
    street VARCHAR (255) NOT NULL,
    house VARCHAR (50) NOT NULL,
    appartment VARCHAR (50) NOT NULL,
    comment VARCHAR (1024) NOT NULL,
    delivery_method INT NOT NULL,
    payment_method INT NOT NULL,
	created_on TIMESTAMP NOT NULL DEFAULT NOW(),
    PRIMARY KEY (id, user_id),
    FOREIGN KEY (user_id)
        REFERENCES users (id)
);

CREATE TABLE IF NOT EXISTS delivery_methods (
	id serial PRIMARY KEY,
    name VARCHAR (255) NOT NULL,
    description VARCHAR (255) NOT NULL,
    days_from INT,
    days_to INT,
    price BIGINT NOT NULL,
	created_on TIMESTAMP NOT NULL DEFAULT NOW()
);

CREATE TABLE IF NOT EXISTS payment_methods (
	id serial PRIMARY KEY,
    name VARCHAR (255) NOT NULL,
    description VARCHAR (255) NOT NULL,
	created_on TIMESTAMP NOT NULL DEFAULT NOW()
);

CREATE TABLE IF NOT EXISTS feedback (
	id serial PRIMARY KEY,
    name VARCHAR (255) NOT NULL,
    email VARCHAR (255) NOT NULL,
    description VARCHAR (1024) NOT NULL,
	created_on TIMESTAMP NOT NULL DEFAULT NOW()
);


